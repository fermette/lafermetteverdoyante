<div class="calendar mt-8">
  {{ $events := index .Site.Data "calendar" }}
  {{ range $events }}
    {{ $start := time .start.dateTime }}
    {{ $end := time .end.dateTime }}
    <div class="event mb-6 p-4 bg-gray-50 rounded-lg shadow-sm">
      <h2 class="text-2xl font-bold text-gray-800">{{ .summary }}</h2>
      <h4 class="text-lg text-gray-600 mt-2">
        {{ $start.Day }} {{ $start.Month }} {{ $start.Year }} • 
        {{ $start.Hour }}:{{ printf "%02d" $start.Minute }} – {{ $end.Hour }}:{{ printf "%02d" $end.Minute }} ({{ $start.Location }}) 
      </h4>
      {{ with .location }}
        <p class="mt-1"><strong>Lieu :</strong> {{ . }}</p>
      {{ end }}
      {{ with .description }}
        <div class="mt-3 text-gray-700">{{ . | safeHTML }}</div>
      {{ end }}
      <a href="/fr/contact.html/" class="mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
        Contact
      </a>
    </div>
  {{ else }}
    <p class="text-gray-500">Aucun événement à venir.</p>
  {{ end }}
</div>    